<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinhaAgenda.Views.Controls.ObsControls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
>
    
    <Frame Padding="10,2,10,2">
        <HorizontalStackLayout Spacing="5">
            <Label Text="Obs " VerticalOptions="Center" WidthRequest="60"></Label>
            <Entry x:Name="obsName" Placeholder="Obs" VerticalOptions="Center">
                <Entry.Behaviors>
                    <toolkit:TextValidationBehavior 
                           x:Name="obsValidator"
                           Flags="ValidateOnAttaching,ValidateOnValueChanged"
                           MinimumLength="3"
                       />
                </Entry.Behaviors>
            </Entry>
            <Frame>
                <Button x:Name="btnSave" Text="Salvar" Clicked="btnSave_Clicked"></Button>
            </Frame>
        </HorizontalStackLayout>
    </Frame>
</ContentView>
